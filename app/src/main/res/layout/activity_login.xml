<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="153dp"
                android:src="@drawable/logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/logo" />


<!--            <include-->
<!--                layout="@layout/input_text_light_gray_underlined"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginHorizontal="@dimen/dp14"-->
<!--                app:layout_constraintTop_toBottomOf="@id/logo"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                android:id="@+id/email_login"-->
<!--                android:layout_marginTop="@dimen/dp60"-->
<!--                />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp14"
                app:layout_constraintTop_toBottomOf="@id/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/email_login"
                android:layout_marginTop="@dimen/dp60"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editTxtLayoutUI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_shape"
                    android:textColorHint="@color/color231F20op60"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@drawable/text_input_stroke_white_selector"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeErrorColor="@color/colorFF2943"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextInputLayoutHintDarkText"
                    app:hintTextColor="@color/color231F20op60"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextUI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_shape"
                        android:drawableStart="@drawable/ic_mail_icon"
                        android:drawablePadding="@dimen/dp10"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:fontFamily="@font/robotolight"
                        android:nestedScrollingEnabled="false"
                        android:paddingStart="@dimen/dp20"
                        android:paddingTop="@dimen/dp20"
                        android:paddingEnd="@dimen/dp20"
                        android:paddingBottom="@dimen/dp20"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/color231F20op60"
                        android:textColorHint="@color/color231F20op60"
                        android:textSize="@dimen/sp18"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_login"
                android:layout_marginTop="@dimen/dp20">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editTxtLayoutUP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:passwordToggleDrawable="@drawable/ic_paswordtoggle"
                    android:textColorHint="@color/color231F20op60"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@drawable/text_input_stroke_white_selector"
                    app:boxStrokeErrorColor="@color/colorFF2943"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="true"
                    app:hintTextAppearance="@style/TextInputLayoutHintText"
                    app:hintTextColor="@color/color231F20op60"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/color231F20op60"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextUP"
                        android:background="@drawable/edittext_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_pass_icon"
                        android:drawablePadding="@dimen/dp10"
                        android:maxLines="1"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:nestedScrollingEnabled="false"
                        android:paddingTop="@dimen/dp20"
                        android:paddingBottom="@dimen/dp20"
                        android:paddingStart="@dimen/dp20"
                        android:paddingEnd="@dimen/dp20"
                        android:singleLine="true"
                        android:textColor="@color/color231F20op60"
                        android:fontFamily="@font/robotolight"
                        android:textColorHint="@color/color231F20op60"
                        android:textSize="@dimen/sp18"
                        android:textAlignment="viewStart"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/password_login"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp13"
                android:layout_marginEnd="@dimen/dp14"
                android:text="@string/forgot_password"
                android:textColor="@color/colorPrimary"
                android:id="@+id/forget_password_button"
                android:fontFamily="@font/robotomedium"
                android:textSize="@dimen/sp14"/>

            <Button
                android:id="@+id/btlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forget_password_button"
                android:layout_marginTop="@dimen/dp76"
                android:text="@string/log_in"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:paddingVertical="@dimen/dp20"
                android:layout_marginHorizontal="@dimen/dp14"
                android:background="@drawable/bk_rounded_2c72f9"
                android:fontFamily="@font/robotomedium"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>